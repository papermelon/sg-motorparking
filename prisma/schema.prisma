// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Carpark {
  id                String   @id @default(cuid())
  name              String
  address           String
  town              String?  // e.g., "Bukit Batok", "Yishun", "Orchard"
  lat               Float
  lng               Float
  type              String   // HDB, MALL, OFFICE, PUBLIC, OTHER
  motorcycleAllowed Boolean
  carAllowed        Boolean
  totalMotoLots     Int?
  covered           Boolean?
  seasonOnly        Boolean?
  pricingNotes      String?
  openingHours      String?
  entranceNotes     String?
  verified          Boolean  @default(false) // For crowd-sourced moderation
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  photos Photo[]
}

model Photo {
  id        String   @id @default(cuid())
  carparkId String
  url       String
  caption   String?
  takenAt   DateTime?
  createdAt DateTime @default(now())

  carpark Carpark @relation(fields: [carparkId], references: [id], onDelete: Cascade)
}
